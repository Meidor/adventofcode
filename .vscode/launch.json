  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'adventofcode'",
      "env": {
        "RUST_LOG": "info"
      },
      "cargo": {
        "args": ["build", "--bin=adventofcode", "--package=adventofcode"],
        "filter": {
          "name": "adventofcode",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'adventofcode'",
      "env": {
        "RUST_LOG": "info"
      },
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=adventofcode",
          "--package=adventofcode"
        ],
        "filter": {
          "name": "adventofcode",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
